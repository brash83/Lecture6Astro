---
import NavBar from '../components/NavBar.astro'; 
import Footer from '../components/Footer.astro'; 
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DC Characters</title>
    <link rel="stylesheet" href="/styles/global.css"> <!-- Link to the global CSS -->
</head>
<body>
    <header>
        <NavBar /> <!-- Use the NavBar component -->
    </header>

    <main>
        <h1>The DC Characters</h1>
        <div class="card-deck">
            <!-- Card 1: The Flash -->
            <div class="card">
                <div class="card-content">
                    <img class="card-img" src="/images/5.7.png" alt="A superhero known for his incredible speed" width="300" height="350">
                    <div class="card-overlay">
                        <h3 class="card-title">The Flash</h3>
                        <p class="card-text">Known for his incredible speed.</p>
                    </div>
                </div>
                <div class="card-details">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">He can run up buildings</li>
                        <li class="list-group-item">Creates sonic booms</li>
                        <li class="list-group-item">Passes through objects</li>
                    </ul>
                    <a href="https://www.dccomics.com/characters/the-flash" class="btn btn-primary">Learn More about The Flash</a>
                </div>
            </div>

            <!-- Card 2: Wonder Woman -->
            <div class="card">
                <div class="card-content">
                    <img class="card-img" src="/images/5.2.png" alt="Princess Diana of the Amazons." width="300" height="350">
                    <div class="card-overlay">
                        <h3 class="card-title">Wonder Woman</h3>
                        <p class="card-text">Princess Diana of the Amazons</p>
                    </div>
                </div>
                <div class="card-details">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Superhuman strength</li>
                        <li class="list-group-item">Bulletproof bracelets</li>
                        <li class="list-group-item">Golden Lasso of Truth</li>
                    </ul>
                    <a href="https://www.dccomics.com/characters/wonder-woman" class="btn btn-primary">Learn More about Wonder Woman</a>
                </div>
            </div>

            <!-- Card 3: Superman -->
            <div class="card">
                <div class="card-content">
                    <img class="card-img" src="/images/5.5.png" alt="The most powerful superhero." width="300" height="350">
                    <div class="card-overlay">
                        <h3 class="card-title">Superman</h3>
                        <p class="card-text">The most powerful superhero.</p>
                    </div>
                </div>
                <div class="card-details">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Strength, speed, flight</li>
                        <li class="list-group-item">X-ray and heat vision</li>
                        <li class="list-group-item">Invulnerability</li>
                    </ul>
                    <a href="https://www.dccomics.com/characters/superman" class="btn btn-primary">Learn More about Superman</a>
                </div>
            </div>

            <!-- Card 4: Zatanna -->
            <div class="card">
                <div class="card-content">
                    <img class="card-img" src="/images/5.6.png" alt="A powerful magician and superhero." width="300" height="350">
                    <div class="card-overlay">
                        <h3 class="card-title">Zatanna</h3>
                        <p class="card-text">A powerful magician and superhero.</p>
                    </div>
                </div>
                <div class="card-details">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Intelligent</li>
                        <li class="list-group-item">Confident</li>
                        <li class="list-group-item">Self-assured</li>
                    </ul>
                    <a href="https://www.dccomics.com/characters/zatanna" class="btn btn-primary">Learn More about Zatanna</a>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer Section -->
    <Footer /> <!-- Use the Footer component -->
    
</body>
</html>
